/* pages/purchase/purchase.wxss */

.purchase {
  width: 100%;
  background: #ffdbe6;
}

.purchase .main {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx;
}

.purchase .main .purchase-text {
  font-size: 30rpx;
  text-indent: 64rpx;
  line-height: 50rpx;
  color: #333;
}

.purchase .main .purchase-text view {
  margin-bottom: 20rpx;
}

.purchase .main .purchase-text .important {
  text-align: center;
  text-indent: 0;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 50rpx;
}

.purchase .main .purchase-text .progress-title {
  text-align: left;
  text-indent: 0;
}

.purchase .main .purchase-content {
  font-size: 0;
}
.purchase .main .purchase-content image{
  width: 100%;
  margin-bottom: 20rpx;
}
