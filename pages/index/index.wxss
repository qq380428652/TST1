/**index.wxss**/

/* header */

.header {
  position: relative;
  font-size: 0;
}

.header .top-bg {
  width: 100%;
  height: 142rpx;
}

.header .wrap .title {
  position: absolute;
  right: 10px;
  top: 45rpx;
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.header .wrap .logo {
  position: absolute;
  left: 0;
  top: 0;
  width: 32%;
  height: 142rpx;
}

/* banner */

.banner {
  width: 100%;
  position: relative;
}

.banner image {
  width: 100%;
  height: 100%;
}

/*导航*/

.nav-bg {
  width: 100%;
  background: #ffdbe6;
  overflow: hidden;
  box-sizing: border-box;
}

.nav-bg  .nav-btn-area {
  justify-content: space-around;
  flex-wrap: wrap;
}

.nav-bg  .nav-btn-area .nav-item {
  flex-basis: 25%;
  margin: 16rpx 10rpx;
  font-size: 30rpx;
  background: #ed3089;
  border-radius: 12rpx;
  line-height: 60rpx;
  text-align: center;
  color: White;
}

/*合伙人  */
.cuviewne{
  margin-bottom: 20rpx;
}
.cuviewne .title {
  width: 100%;
  background: #ed3089;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
}

.cuviewne .pic {
  position: relative;
  font-size: 0;
}

.cuviewne .pic image {
  width: 100%;
}

.cuviewne .pic .button {
  position: absolute;
  width: 162rpx;
  font-size: 30rpx;
  text-align: center;
  top: 732rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border: 1rpx solid white;
  color: white;
  padding: 8rpx 0;
  z-index: 1;
}
