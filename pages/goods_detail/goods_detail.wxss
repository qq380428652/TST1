/* pages/goods_detail/goods_detail.wxss */

.goods-detail {
  width: 100%;
  border-top: 1px solid #ddd;
}

.goods-detail .detail-header {
  margin-bottom: 40rpx;
}

.goods-detail .detail-header .title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  color: #7a7a7a;
  padding: 20rpx 0;
}

.goods-detail .detail-header .other {
  text-align: center;
  font-size: 30rpx;
  color: #7a7a7a;
}

.goods-detail .detail-content {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  font-size: 0;
}

.goods-detail .detail-content image {
  width: 100%;
  box-sizing: border-box;
}
