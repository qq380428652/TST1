/* pages/contact/contact.wxss */

.contact {
  width: 100%;
  background: #ffdbe6;
}

.contact .main {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx;
  font-weight: bold;
  color: #444;
  font-size: 32rpx;
}

.contact .main .contact-msg .title {
  line-height: 64rpx;
}

.contact .main .contact-msg .contact-style {
  line-height: 64rpx;
  text-indent: 32rpx;
}

.contact .main .contact-img image:nth-child(1) {
  width: 100%;
  height: 350rpx;
}
.contact .main .contact-img image:nth-child(2) {
  width: 100%;
  height: 750rpx;
}