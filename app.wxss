/* 产品图 */

.chanpin {
  margin-top: 20rpx;
  overflow: hidden;
}

.chanpin ul li image {
  margin-bottom: 10rpx;
  border: 1rpx solid #f1a7a7;
  width: 100%;
}

.chanpin ul li p {
  padding-top: 5rpx;
  padding-bottom: 10rpx;
}

.chanpin ul li {
  float: left;
  margin-right: 10rpx;
  width: 49.1%;
  border: 1rpx solid #eee;
  padding: 10rpx;
  margin-bottom: 20rpx;
  -webkit-transition-duration: 0.4s;
  transition-duration: 0.4s;
}

.chanpin ul li:nth-child(2n) {
  margin-right: auto;
}

.chanpin ul li h1 {
  font-size: 1em;
  color: #626262;
}

.chanpin ul li:hover {
  border: 1rpx solid red;
  cursor: pointer;
}

@media (max-width: 414rpx) {
  .chanpin ul li {
    width: 100%;
    border: 1rpx solid #eee;
    padding: 10rpx;
    margin-bottom: 20rpx;
    -webkit-transition-duration: 0.4s;
    transition-duration: 0.4s;
  }

  .chanpin ul li h1 {
    font-size: 1.5em;
    color: #626262;
  }
}

